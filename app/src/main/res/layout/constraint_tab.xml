<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="chainStyle=spread    layout_width=0"/>

    <!-- chainStyle="spread"  宽度为0-->
    <TextView
        android:id="@+id/top_tab1"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:background="#f67"
        android:gravity="center"
        android:text="Tab1"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintHorizontal_weight="2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/top_tab2"
        app:layout_constraintTop_toTopOf="parent"/>


    <TextView
        android:id="@+id/top_tab2"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:background="#A67"
        android:gravity="center"
        android:text="Tab2"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@id/top_tab1"
        app:layout_constraintRight_toLeftOf="@+id/top_tab3"
        app:layout_constraintTop_toTopOf="parent"/>


    <TextView
        android:id="@+id/top_tab3"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:background="#767"
        android:gravity="center"
        android:text="Tab3"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@id/top_tab2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/top_tab1"
        android:layout_marginTop="40dp"
        android:text="chainStyle=spread    layout_width>0"/>
    <!-- chainStyle="spread"  宽度大于0-->
    <TextView
        android:id="@+id/tab1_spread"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_marginTop="60dp"
        android:background="#f67"
        android:gravity="center"
        android:text="Tab1"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/tab2_spread"
        app:layout_constraintTop_toBottomOf="@id/top_tab1"/>


    <TextView
        android:id="@+id/tab2_spread"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_marginTop="60dp"
        android:background="#A67"
        android:gravity="center"
        android:text="Tab2"
        app:layout_constraintLeft_toRightOf="@id/tab1_spread"
        app:layout_constraintRight_toLeftOf="@+id/tab3_spread"
        app:layout_constraintTop_toBottomOf="@id/top_tab1"/>


    <TextView
        android:id="@+id/tab3_spread"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_marginTop="60dp"
        android:background="#767"
        android:gravity="center"
        android:text="Tab3"
        app:layout_constraintLeft_toRightOf="@id/tab2_spread"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top_tab1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tab1_spread"
        android:layout_marginTop="40dp"
        android:text="chainStyle=spread_inside    layout_width>0"/>
    <!-- chainStyle="spread_inside"  宽度大于0-->
    <TextView
        android:id="@+id/tab1_spread_inside"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_marginTop="60dp"
        android:background="#f67"
        android:gravity="center"
        android:text="Tab1"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/tab2_spread_inside"
        app:layout_constraintTop_toBottomOf="@id/tab1_spread"/>


    <TextView
        android:id="@+id/tab2_spread_inside"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_marginTop="60dp"
        android:background="#A67"
        android:gravity="center"
        android:text="Tab2"
        app:layout_constraintLeft_toRightOf="@id/tab1_spread_inside"
        app:layout_constraintRight_toLeftOf="@+id/tab3_spread_inside"
        app:layout_constraintTop_toBottomOf="@id/tab1_spread"/>


    <TextView
        android:id="@+id/tab3_spread_inside"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_marginTop="60dp"
        android:background="#767"
        android:gravity="center"
        android:text="Tab3"
        app:layout_constraintLeft_toRightOf="@id/tab2_spread_inside"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tab1_spread"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tab1_spread_inside"
        android:layout_marginTop="40dp"
        android:text="chainStyle=packed    layout_width>0"/>
    <!-- chainStyle="packed"  宽度大于0-->
    <TextView
        android:layout_marginTop="60dp"
        android:id="@+id/tab1_packed"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:background="#f67"
        android:gravity="center"
        android:text="Tab1"
        app:layout_constraintTop_toBottomOf="@id/tab1_spread_inside"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/tab2_packed"/>


    <TextView
        android:layout_marginTop="60dp"
        android:id="@+id/tab2_packed"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:background="#A67"
        android:gravity="center"
        android:text="Tab2"
        app:layout_constraintTop_toBottomOf="@id/tab1_spread_inside"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@id/tab1_packed"
        app:layout_constraintRight_toLeftOf="@+id/tab3_packed"/>


    <TextView
        android:layout_marginTop="60dp"
        android:id="@+id/tab3_packed"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:background="#767"
        android:gravity="center"
        android:text="Tab3"
        app:layout_constraintTop_toBottomOf="@id/tab1_spread_inside"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@id/tab2_packed"
        app:layout_constraintRight_toRightOf="parent"/>

</android.support.constraint.ConstraintLayout>