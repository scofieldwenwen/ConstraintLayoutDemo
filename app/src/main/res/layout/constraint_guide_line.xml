<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <android.support.constraint.Guideline
        android:id="@+id/guideline_h"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="40dp"/>

    <android.support.constraint.Guideline
        android:id="@+id/guideline_v"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="40dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello Guideline"
        app:layout_constraintLeft_toLeftOf="@id/guideline_v"
        app:layout_constraintTop_toBottomOf="@id/guideline_h"/>


    <android.support.constraint.Guideline
        android:id="@+id/guideline_h2"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.8"
        android:layout_height="wrap_content"/>

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:id="@+id/guideline_v2"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.8"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="60dp"
        app:layout_constraintLeft_toRightOf="@id/guideline_v2"
        app:layout_constraintTop_toBottomOf="@id/guideline_h2"
        android:background="@color/colorPrimary"
        android:layout_height="60dp"/>

</android.support.constraint.ConstraintLayout>